a=int(input("Enter the first number"))
b=int(input("Enter the second number"))
print("Please select operation -\n" \
        "1. Add\n" \
        "2. Subtract\n" \
        "3. Multiply\n" \
        "4. Divide\n")
while True:
 select=int(input("Enter your choice ")) 
 if select==1:
   print(a+b)
 elif select==2:
  print(a-b)
 elif select==3:
  print(a*b)
 elif select==4:
  print(a/b)   
 else:
  print("Invald")  
  
  

  
